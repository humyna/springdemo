<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 使用Spring的命名空间p装配属性 -->
	<!--<start id="kenny2_bean" /> -->
	<bean id="kenny2" class="info.zoio.tec.java.springinaction.springidol.Instrumentalist"
		p:song = "两只老鼠"
		p:instrument-ref = "saxophone" />
	<!--<end id="kenny2_bean" /> -->

	<!--<start id="saxophone_bean" /> -->
	<bean id="saxophone" class="info.zoio.tec.java.springinaction.springidol.Saxophone" />
	<!--<end id="saxophone_bean" /> -->
</beans>
